<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="45dp">
<ImageView
    android:id="@id/weather_page_info_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/sun"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    />
    <TextView
        android:id="@id/weather_page_info_temperature"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        tools:text="35°/28°"
        />
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/weather_page_info_icon"
        android:layout_toLeftOf="@id/weather_page_info_temperature"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/weather_page_info_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="今天"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="雷阵雨转晴|优"
            />
    </LinearLayout>
    <View
        android:layout_toRightOf="@id/weather_page_info_icon"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        />
</RelativeLayout>